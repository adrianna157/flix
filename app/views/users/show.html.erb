<section class="user">
  <%= profile_image(@user) %>
  <h1><%=@user.name %></h1>
  <h2><%=mail_to(@user.email) %></h2>

  <h3>Member Since</h3>
  <p>
    <%= @user.created_at.strftime("%B %Y") %>
  </p>
</section>
<section class="admin">
  <%= link_to "Edit Account", edit_user_path(@user), class: "button" %>
  <%= link_to "Delete Account", @user, class: "button",
                              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
</section>
